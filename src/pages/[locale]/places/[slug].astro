---
import Layout from '../../../layouts/Layout.astro';
import Navbar from '../../../components/Navbar.astro';
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { locales, type Locale, t } from '../../../i18n/utils';

export async function getStaticPaths() {
  const places = await getCollection('places');
  
  return places.map((place) => {
    // Extract locale and slug from id like "de/himars-kitchen"
    const [locale, ...slugParts] = place.id.split('/');
    const slug = slugParts.join('/');
    
    return {
      params: { locale, slug },
      props: { place }
    };
  });
}

interface Props {
  place: CollectionEntry<'places'>;
}

const { locale, slug } = Astro.params as { locale: Locale; slug: string };
const { place } = Astro.props;
const { data } = place;
const { Content } = await render(place);

// Get the other locale for language switcher
const otherLocale = locale === 'de' ? 'uk' : 'de';
---

<Layout locale={locale}>
  <Navbar />
  
  <!-- Language Switcher -->
  <div class="neo-lang-switcher">
    <a href={`${import.meta.env.BASE_URL}de/places/${slug}/`} class={`neo-lang-btn ${locale === 'de' ? 'active' : ''}`}>DE</a>
    <a href={`${import.meta.env.BASE_URL}uk/places/${slug}/`} class={`neo-lang-btn ${locale === 'uk' ? 'active' : ''}`}>UK</a>
  </div>

  <main class="place-detail">

    <!-- Hero with Image -->
    {data.image && (
      <div class="neo-hero-image">
        <img src={data.image.startsWith('http') ? data.image : `${import.meta.env.BASE_URL}${data.image.replace(/^\//, '')}`} alt={data.name} />
      </div>
    )}

    <!-- Main Content Grid -->
    <div class="content-grid">
      <!-- Sidebar with Details -->
      <aside class="sidebar">
        <!-- Back to all places -->
        <nav class="neo-back-top">
          <a href={`${import.meta.env.BASE_URL}${locale}/`} class="neo-back-link">
            <span class="neo-back-arrow">‚Üê</span>
            {t(locale, 'back.link')}
          </a>
        </nav>
        
        <div class="neo-details-card">
          <div class="neo-detail-item">
            <span class="neo-detail-icon">üìç</span>
            <div class="detail-text">
              <span class="neo-detail-label">{t(locale, 'place.address')}</span>
              <span class="neo-detail-value">{data.address}</span>
            </div>
          </div>
        </div>
        
        <!-- CTA Button -->
        <div class="cta-stack">
          <a href={data.ctaPrimary.url} class="neo-cta-primary">
            {data.ctaPrimary.label}
            <span class="cta-arrow">‚Üí</span>
          </a>
        </div>
        
        <!-- Tags -->
        <div class="neo-tags-box">
          <span class="neo-tags-title">{t(locale, 'place.tags')}</span>
          <div class="neo-tag-list">
            {data.tags.map((tag) => (
              <span class="neo-tag-item">{tag}</span>
            ))}
          </div>
        </div>
      </aside>
      
      <!-- Article Content -->
      <article class="main-content">
        <h1 class="page-title">{data.name}</h1>
        <div class="prose">
          <Content />
        </div>
        
        {data.mapEmbed && (
          <div class="neo-map-embed">
            <Fragment set:html={data.mapEmbed} />
          </div>
        )}
      </article>
    </div>

    <!-- Back Navigation -->
    <nav class="neo-back-nav">
      <a href={`${import.meta.env.BASE_URL}${locale}/`} class="neo-back-link">
        <span class="neo-back-arrow">‚Üê</span>
        {t(locale, 'back.link')}
      </a>
    </nav>
  </main>
</Layout>

<style>
  .place-detail {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1rem 4rem;
  }

  /* Page Title */
  .page-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 900;
    line-height: 1;
    margin: 0 0 2rem;
    padding: 0;
    border: none;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: #000;
  }

  .page-title::after {
    display: none;
  }

  /* Content Grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .content-grid {
      grid-template-columns: 280px 1fr;
      gap: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 320px 1fr;
    }
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .sidebar {
      position: sticky;
      top: 2rem;
      align-self: start;
    }
  }

  /* Detail Text */
  .detail-text {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    min-width: 0;
  }

  /* CTA Stack */
  .cta-stack {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cta-arrow {
    font-size: 1.1rem;
  }

  /* Main Content */
  .main-content {
    min-width: 0;
  }

  /* Prose - unique adjustments for this page */
  .prose :global(h2)::after {
    display: none;
  }

  .prose :global(li)::before {
    color: var(--ua-blue);
  }

  /* Mobile */
  @media (max-width: 767px) {
    .page-title {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }

    .content-grid {
      gap: 2rem;
    }

    .sidebar {
      order: 2;
    }

    .main-content {
      order: 1;
    }
  }
</style>

