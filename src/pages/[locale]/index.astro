                  <div class="neo-badge neo-badge-primary absolute top-4 left-4">{data.locationBadge}</div>
                  <div class={`place-category-tag ${data.category}`}>{data.category}</div>
                </div>
                <div class="neo-place-content">
                  <div class="place-header">
                    <h3 class="neo-place-name">{data.name}</h3>
