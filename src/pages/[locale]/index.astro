    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  @media (max-width: 640px) {
    .slava-text {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const ITEMS_PER_PAGE = 3;
    let currentPage = 1;
    let currentFilter = 'all';

    const filterBtns = document.querySelectorAll<HTMLButtonElement>('.neo-filter-btn');
    const placeCards = document.querySelectorAll<HTMLAnchorElement>('.neo-place-card');
    const prevBtn = document.getElementById('prev-btn') as HTMLButtonElement;
    const nextBtn = document.getElementById('next-btn') as HTMLButtonElement;
    const currentPageEl = document.getElementById('current-page')!;
    const totalPagesEl = document.getElementById('total-pages')!;
    const pagination = document.getElementById('pagination')!;

    function getFilteredCards(): HTMLAnchorElement[] {
      return Array.from(placeCards).filter(card => 
        currentFilter === 'all' || card.dataset.category === currentFilter
      );
    }

    function getTotalPages(): number {
      const filteredCards = getFilteredCards();
      return Math.ceil(filteredCards.length / ITEMS_PER_PAGE);
    }

    function updatePagination() {
      const totalPages = getTotalPages();
      const filteredCards = getFilteredCards();

      // Hide pagination if 3 or fewer items
      if (filteredCards.length <= ITEMS_PER_PAGE) {
        pagination.style.display = 'none';
      } else {
        pagination.style.display = 'flex';
      }

      // Update page info
      currentPageEl.textContent = currentPage.toString();
      totalPagesEl.textContent = totalPages.toString();

      // Update button states
      prevBtn.disabled = currentPage === 1;
      nextBtn.disabled = currentPage >= totalPages;
    }

    function renderCards() {
      const filteredCards = getFilteredCards();
      const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
      const endIndex = startIndex + ITEMS_PER_PAGE;

      // Hide all cards first
      placeCards.forEach(card => card.classList.add('hidden'));

      // Show only the cards for current page within the filtered set
      filteredCards.forEach((card, index) => {
        if (index >= startIndex && index < endIndex) {
          card.classList.remove('hidden');
        }
      });

      updatePagination();
    }

    // Filter button click handler
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        currentFilter = btn.dataset.filter || 'all';
        currentPage = 1; // Reset to first page when filter changes
        renderCards();
      });
    });

    // Pagination button handlers
    prevBtn.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        renderCards();
        // Scroll to top of places section
        document.querySelector('.places-section')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentPage < getTotalPages()) {
        currentPage++;
        renderCards();
        // Scroll to top of places section
        document.querySelector('.places-section')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });

    // Initial render
    renderCards();
  });
</script>

