              <span class="submit-label">{t(locale, 'submit.label')}</span>
              <h3 class="submit-title">{t(locale, 'submit.title')}</h3>
            </div>
            <p class="submit-description">
              {t(locale, 'submit.description')}
            </p>
            <a href="mailto:hello@mypaperwork.co?subject=Submit a Place" class="neo-btn neo-btn-primary neo-btn-lg">
              <span class="btn-icon">ğŸ“®</span>
              {t(locale, 'submit.button')}
            </a>
          </div>
          <div class="neo-ua-flag neo-ua-flag-vertical">
            <div class="neo-ua-flag-stripe neo-ua-flag-blue"></div>
            <div class="neo-ua-flag-stripe neo-ua-flag-yellow"></div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  .homepage {
    min-height: 100vh;
    background: var(--background);
  }

  /* Hero Content Layout (unique to this page) */
  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 72rem;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 2rem;
  }

  .hero-left {
    flex: 1;
  }

  .hero-right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .hero-right :global(.powered-by--header) {
    margin-top: 0;
  }

  @media (max-width: 900px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .hero-right {
      justify-content: flex-start;
    }
  }

  /* Title Shadow Effect (unique) */
  .title-line {
    display: block;
  }

  .title-line.accent {
    color: transparent;
    -webkit-text-stroke: 4px #000;
    text-stroke: 4px #000;
    position: relative;
  }

  .title-line.accent::after {
    display: none;
  }

  .shadow-text {
    position: relative;
    display: inline-block;
  }

  .shadow-text::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    color: transparent;
    -webkit-text-stroke: 4px var(--ua-blue);
    text-stroke: 4px var(--ua-blue);
    z-index: -1;
    transform: translate(4px, 4px);
    pointer-events: none;
  }

  /* Main Content */
  .main-content {
    position: relative;
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Section Styles */
  .section {
    padding: 4rem 0;
    border-bottom: 4px solid #000;
  }

  .section:last-of-type {
    border-bottom: none;
  }

  /* Filter Section */
  .filter-section {
    padding: 2rem 0;
    margin-top: 2rem;
  }

  .filter-icon {
    font-size: 1rem;
  }

  /* Places Grid */
  .places-section {
    padding-bottom: 4rem;
  }

  .places-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  /* Pagination extras */
