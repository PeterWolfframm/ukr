        <div class="places-grid" id="places-grid">
          {places.map((place) => {
            const { data } = place;
            const slug = place.id.replace(`${locale}/`, '');
            const isRestaurant = data.category === 'restaurant';
            const isOrganization = data.category === 'organization';
            
            const restaurantEmojis = isRestaurant ? getRestaurantEmojis(slug) : [];
            const blueShade = isRestaurant ? getRestaurantBlueShade(slug) : 0;
            
            return (
              <a href={`${import.meta.env.BASE_URL}${locale}/places/${slug}/`} class="neo-place-card" data-category={data.category}>
                <div class={`neo-place-image ${isOrganization ? 'neo-placeholder-org' : ''} ${isRestaurant ? `neo-placeholder-restaurant-${blueShade}` : ''}`}>
                  {isRestaurant ? (
