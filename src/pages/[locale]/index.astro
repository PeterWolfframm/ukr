                    <div class="detail-item">
                      <span class="detail-icon">ğŸ“</span>
                      <span>{data.address}</span>
                    </div>
                  </div>
                  <div class="place-tags">
                    {data.tags.map((tag) => (
                      <span class="neo-tag">{tag}</span>
