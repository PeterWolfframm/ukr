    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .detail-icon {
    font-size: 1rem;
  }

  /* Tags Container */
  .place-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  /* Submit Card Content */
  .submit-decoration {
    position: relative;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
