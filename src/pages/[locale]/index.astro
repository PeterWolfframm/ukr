      <div class="hero-content">
        <div class="hero-left">
          <h1 class="neo-hero-title">
            <span class="title-line accent"><span class="shadow-text" data-text={t(locale, 'hero.title.line1')}>{t(locale, 'hero.title.line1')}</span> {t(locale, 'hero.title.line2')}</span>
          </h1>
        </div>
        <div class="hero-right">
          <PoweredBy layout="header" />
        </div>
      </div>
    </header>

    <main class="main-content">
      <!-- Filter Bar -->
      <section class="filter-section">
        <div class="neo-filter-bar justify-center! border-none!">
          <button class="neo-filter-btn active" data-filter="all">
            <span class="filter-icon">ğŸŒ</span>
            {t(locale, 'filter.all')}
          </button>
          <button class="neo-filter-btn" data-filter="restaurant">
            <span class="filter-icon">ğŸ½ï¸</span>
