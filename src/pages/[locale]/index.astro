---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PoweredBy from '../../components/PoweredBy.astro';
import MyPaperworkCard from '../../components/MyPaperworkCard.astro';
import { locales, type Locale, t } from '../../i18n/utils';

export function getStaticPaths() {
  return locales.map((locale) => ({ params: { locale } }));
}

const { locale } = Astro.params as { locale: Locale };

// Fetch places for the current locale
const allPlaces = await getCollection('places');
const places = allPlaces.filter(place => place.id.startsWith(`${locale}/`));

// Get the other locale for language switcher
const otherLocale = locale === 'de' ? 'uk' : 'de';

// Food emojis for restaurant cards
const foodEmojis = [
  'ğŸ•', 'ğŸ”', 'ğŸŸ', 'ğŸŒ­', 'ğŸ¿', 'ğŸ§‚', 'ğŸ¥“', 'ğŸ¥š', 'ğŸ³', 'ğŸ§‡', 'ğŸ¥', 'ğŸ§ˆ', 'ğŸ', 'ğŸ¥', 'ğŸ¥¨', 'ğŸ¥¯', 'ğŸ¥–', 'ğŸ§€', 'ğŸ¥—', 'ğŸ¥™', 'ğŸ¥ª', 'ğŸŒ®', 'ğŸŒ¯', 'ğŸ¥«', 'ğŸ', 'ğŸœ', 'ğŸ²', 'ğŸ›', 'ğŸ£', 'ğŸ±', 'ğŸ¥Ÿ', 'ğŸ¦ª', 'ğŸ¤', 'ğŸ™', 'ğŸš', 'ğŸ˜', 'ğŸ¥', 'ğŸ¥ ', 'ğŸ¥®', 'ğŸ¢', 'ğŸ¡', 'ğŸ§', 'ğŸ¨', 'ğŸ¦', 'ğŸ¥§', 'ğŸ§', 'ğŸ°', 'ğŸ‚', 'ğŸ®', 'ğŸ­', 'ğŸ¬', 'ğŸ«', 'ğŸ¿', 'ğŸ©', 'ğŸª', 'ğŸŒ°', 'ğŸ¥œ', 'ğŸ¯', 'ğŸ¥›', 'ğŸ¼', 'ğŸ«–', 'â˜•', 'ğŸµ', 'ğŸ§ƒ', 'ğŸ¥¤', 'ğŸ§‹', 'ğŸ¶', 'ğŸº', 'ğŸ»', 'ğŸ¥‚', 'ğŸ·', 'ğŸ¥ƒ', 'ğŸ¸', 'ğŸ¹', 'ğŸ§‰', 'ğŸ¾', 'ğŸ§Š', 'ğŸ¥„', 'ğŸ´', 'ğŸ½ï¸', 'ğŸ¥¢', 'ğŸ¥¡', 'ğŸ¥£', 'ğŸ¥¤', 'ğŸ¥ƒ', 'ğŸ·', 'ğŸ¸', 'ğŸ¹', 'ğŸº', 'ğŸ»', 'ğŸ¥‚', 'ğŸ¾', 'ğŸ§Š'
];

// Generate three random food emojis for a restaurant based on slug
function getRestaurantEmojis(slug: string): string[] {
  // Simple hash function for deterministic randomness
  let hash = 0;
  for (let i = 0; i < slug.length; i++) {
    const char = slug.charCodeAt(i);
    hash = ((hash << 5) - hash) + char;
    hash = hash & hash; // Convert to 32bit integer
  }
  
  const emojis: string[] = [];
  for (let i = 0; i < 3; i++) {
    const index = Math.abs(hash + i * 17) % foodEmojis.length;
    emojis.push(foodEmojis[index]);
  }
  
  return emojis;
}

// Get Ukrainian blue shade index (0, 1, or 2) for a restaurant based on slug
function getRestaurantBlueShade(slug: string): number {
  let hash = 0;
  for (let i = 0; i < slug.length; i++) {
    const char = slug.charCodeAt(i);
    hash = ((hash << 5) - hash) + char;
    hash = hash & hash; // Convert to 32bit integer
  }
  return Math.abs(hash) % 3;
}
---

<Layout locale={locale}>
