---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PoweredBy from '../components/PoweredBy.astro';

// Fetch places
const places = await getCollection('places');
---

<Layout>
  <div class="homepage">
    <!-- Hero Section -->
    <header class="hero">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-line accent"><span class="shadow-text">ukrainian</span> places</span>
        </h1>
        <PoweredBy layout="header" />
      </div>
    </header>

    <main class="main-content">
      <!-- Filter Bar -->
      <section class="filter-section">
        <div class="filter-bar">
          <button class="filter-btn active" data-filter="all">
            <span class="filter-icon">üåç</span>
            All Places
          </button>
          <button class="filter-btn" data-filter="restaurant">
            <span class="filter-icon">üçΩÔ∏è</span>
            Restaurants
          </button>
          <button class="filter-btn" data-filter="organization">
            <span class="filter-icon">ü§ù</span>
            Organizations
          </button>
          <button class="filter-btn" data-filter="medical">
            <span class="filter-icon">üè•</span>
            Medical
          </button>
        </div>
      </section>

      <!-- Places Section -->
      <section class="section places-section">
        <div class="places-grid">
          {places.map((place) => {
            const { data } = place;
            const isRestaurant = data.category === 'restaurant';
            const isOrganization = data.category === 'organization';
            const isMedical = data.category === 'medical';
            
            return (
              <a href={`/places/${place.id}/`} class="place-card" data-category={data.category}>
                <div class={`place-image-wrapper ${isOrganization ? 'org-image' : ''} ${isMedical ? 'medical-image' : ''}`}>
                  {data.image ? (
                    <img src={data.image} alt={data.name} class="place-image" />
                  ) : isOrganization ? (
                    <div class="org-placeholder">
                      <span class="org-icon">üá∫üá¶</span>
                      <span class="org-pattern"></span>
                    </div>
                  ) : isMedical ? (
                    <div class="medical-placeholder">
                      <span class="medical-icon">‚öïÔ∏è</span>
                      <span class="medical-cross"></span>
                    </div>
                  ) : null}
                  <div class="place-badge">{data.locationBadge}</div>
                  <div class={`place-category-tag ${data.category}`}>{data.category}</div>
                </div>
                <div class="place-content">
                  <div class="place-header">
                    <h3 class="place-name">{data.name}</h3>
                    {data.rating ? (
                      <div class="place-rating">
                        <span class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
                        <span class="rating-text">{data.rating}</span>
                      </div>
                    ) : data.verified ? (
                      <div class="place-rating verified">
                        <span class="verified-icon">‚úì</span>
                        <span class="rating-text">Verified</span>
                      </div>
                    ) : null}
                  </div>
                  <div class="place-details">
                    <div class="detail-item">
                      <span class="detail-icon">üìç</span>
                      <span>{data.address}</span>
                    </div>
                    <div class="detail-item">
                      <span class="detail-icon">üïê</span>
                      <span>{data.hours}</span>
                    </div>
                    {data.phone && (
                      <div class="detail-item">
                        <span class="detail-icon">üìû</span>
                        <span>{data.phone}</span>
                      </div>
                    )}
                    {data.priceLevel && (
                      <div class="detail-item">
                        <span class="detail-icon">üí∞</span>
                        <span>{data.priceLevel}</span>
                      </div>
                    )}
                    {data.insurance && (
                      <div class="detail-item">
                        <span class="detail-icon">üí≥</span>
                        <span>{data.insurance}</span>
                      </div>
                    )}
                  </div>
                  <div class="place-tags">
                    {data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                </div>
              </a>
            );
          })}
        </div>

        <!-- Submit Your Place Card -->
        <div class="submit-card">
          <div class="submit-decoration">
            <span class="deco-plus">+</span>
            <span class="deco-plus secondary">+</span>
          </div>
          <div class="submit-content">
            <div class="submit-header">
              <span class="submit-label">Community</span>
              <h3 class="submit-title">Submit Your Place</h3>
            </div>
            <p class="submit-description">
              Know a Ukrainian business, organization, or service that should be listed? Help grow our community directory.
            </p>
            <a href="mailto:hello@mypaperwork.co?subject=Submit a Place" class="submit-button">
              <span class="btn-icon">üìÆ</span>
              Submit a Place
            </a>
          </div>
          <div class="submit-flag">
            <div class="flag-stripe blue"></div>
            <div class="flag-stripe yellow"></div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="footer-content">
        <div class="footer-brand">
          <PoweredBy layout="footer" />
        </div>
        <div class="footer-center">
          <span class="slava-text">Slava Ukraini</span>
        </div>
        <nav class="footer-nav">
        </nav>
      </div>
    </footer>
  </div>
</Layout>

<style>
  .homepage {
    min-height: 100vh;
    background: var(--background);
  }

  /* Hero Section */
  .hero {
    position: relative;
    padding: 4rem 2rem 6rem;
    overflow: hidden;
    border-bottom: 8px solid #000;
    background: 
      linear-gradient(135deg, transparent 0%, transparent 50%, rgba(0, 102, 204, 0.08) 50%, rgba(0, 102, 204, 0.08) 100%),
      var(--background);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 72rem;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 4px solid #000;
    background: #0066CC;
    color: #000;
    font-size: 0.75rem;
    font-weight: 900;
    letter-spacing: 0.15em;
    margin-bottom: 2rem;
  }

  .hero-title {
    font-size: clamp(3.5rem, 12vw, 8rem);
    font-weight: 900;
    line-height: 0.9;
    margin: 0;
    padding: 0;
    border: none;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .hero-title::after {
    display: none;
  }

  .title-line {
    display: block;
  }

  .title-line.accent {
    color: transparent;
    -webkit-text-stroke: 4px #000;
    text-stroke: 4px #000;
    position: relative;
  }

  .title-line.accent::after {
    display: none;
  }

  .shadow-text {
    position: relative;
    display: inline-block;
  }

  .shadow-text::after {
    content: 'ukrainian';
    position: absolute;
    left: 0;
    top: 0;
    color: transparent;
    -webkit-text-stroke: 4px #0066CC;
    text-stroke: 4px #0066CC;
    z-index: -1;
    transform: translate(4px, 4px);
    pointer-events: none;
  }


  .hero-tagline {
    font-size: 1.25rem;
    font-weight: 600;
    max-width: 32rem;
    margin: 2rem 0;
    line-height: 1.5;
  }

  .hero-stats {
    display: flex;
    gap: 3rem;
    margin-top: 3rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    line-height: 1;
    border-bottom: 4px solid #0066CC;
  }

  .stat-label {
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 0.5rem;
    color: #666;
  }

  .hero-decoration {
    position: absolute;
    right: -5%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    display: none;
  }

  @media (min-width: 1024px) {
    .hero-decoration {
      display: block;
    }
  }

  .deco-circle {
    width: 400px;
    height: 400px;
    border: 8px solid #000;
    border-radius: 50%;
    position: relative;
  }

  .deco-circle::before {
    content: '';
    position: absolute;
    inset: 20px;
    border: 4px dashed rgba(0,0,0,0.2);
    border-radius: 50%;
  }

  .deco-lines {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .deco-line {
    width: 200px;
    height: 4px;
    background: #0066CC;
    position: absolute;
    left: 50%;
    transform-origin: left center;
    animation: rotate-line 20s linear infinite;
    animation-delay: var(--delay);
  }

  @keyframes rotate-line {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Main Content */
  .main-content {
    position: relative;
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .main-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: -50vw;
    right: 50%;
    height: 400px;
    background: linear-gradient(-45deg, transparent 0%, transparent 50%, rgba(0, 102, 204, 0.08) 50%, rgba(0, 102, 204, 0.08) 100%);
    pointer-events: none;
    z-index: -1;
  }

  /* Section Styles */
  .section {
    padding: 4rem 0;
    border-bottom: 4px solid #000;
  }

  .section:last-of-type {
    border-bottom: none;
  }

  .section-header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .section-title-group h2 {
    margin: 0;
    padding: 0;
    border: none;
    font-size: 2rem;
  }

  .section-label {
    display: block;
    font-size: 0.7rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    color: #0066CC;
    margin-bottom: 0.25rem;
  }

  .section-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 800;
    text-transform: uppercase;
    padding: 0.75rem 1.25rem;
    border: 4px solid #000;
    background: #fff;
    box-shadow: 4px 4px 0 #000;
    transition: all 0.15s ease;
  }

  .section-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000;
    background: #0066CC;
  }

  /* Filter Section */
  .filter-section {
    padding: 2rem 0;
    border-bottom: 4px solid #000;
  }

  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .filter-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    font-size: 0.8rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 4px solid #000;
    background: #fff;
    cursor: pointer;
    transition: all 0.15s ease;
    box-shadow: 3px 3px 0 #000;
  }

  .filter-btn:hover {
    transform: translate(1px, 1px);
    box-shadow: 2px 2px 0 #000;
    background: #f5f5f5;
  }

  .filter-btn.active {
    background: #0066CC;
    color: #fff;
    transform: translate(2px, 2px);
    box-shadow: 1px 1px 0 #000;
  }

  .filter-icon {
    font-size: 1rem;
  }

  /* Places Grid */
  .places-section {
    padding-bottom: 4rem;
  }

  .places-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  /* Place Card */
  .place-card {
    display: grid;
    grid-template-columns: 1fr;
    border: 8px solid #000;
    background: #fff;
    box-shadow: 8px 8px 0 #000;
    overflow: hidden;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  @media (min-width: 768px) {
    .place-card {
      grid-template-columns: 350px 1fr;
    }
  }

  .place-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 12px 12px 0 #000;
  }

  .place-card.hidden {
    display: none;
  }

  .place-image-wrapper {
    position: relative;
    height: 280px;
    overflow: hidden;
    border-bottom: 6px solid #000;
  }

  @media (min-width: 768px) {
    .place-image-wrapper {
      height: auto;
      min-height: 100%;
      border-bottom: none;
      border-right: 6px solid #000;
    }
  }

  .place-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .place-card:hover .place-image {
    transform: scale(1.05);
  }

  .place-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.5rem 1rem;
    background: #0066CC;
    color: #fff;
    font-size: 0.75rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    border: 4px solid #000;
    box-shadow: 4px 4px 0 #000;
  }

  .place-category-tag {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    padding: 0.4rem 0.8rem;
    font-size: 0.65rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 3px solid #000;
  }

  .place-category-tag.restaurant {
    background: #ffeb80;
    color: #000;
  }

  .place-category-tag.organization {
    background: #0066CC;
    color: #fff;
  }

  .place-category-tag.medical {
    background: #ff6b6b;
    color: #fff;
  }

  /* Organization Placeholder */
  .org-image {
    background: linear-gradient(135deg, #0066CC 0%, #004a99 100%);
  }

  .org-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .org-icon {
    font-size: 5rem;
    z-index: 2;
  }

  .org-pattern {
    position: absolute;
    inset: 0;
    background: 
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 20px,
        rgba(255,255,255,0.05) 20px,
        rgba(255,255,255,0.05) 40px
      );
  }

  /* Medical Placeholder */
  .medical-image {
    background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
  }

  .medical-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .medical-icon {
    font-size: 5rem;
    z-index: 2;
  }

  .medical-cross {
    position: absolute;
    width: 80px;
    height: 80px;
    background: #ff6b6b;
    opacity: 0.15;
  }

  .medical-cross::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 40px;
    background: #ff6b6b;
  }

  .medical-cross::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 120px;
    background: #ff6b6b;
  }

  .place-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .place-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .place-name {
    font-size: 1.75rem;
    font-weight: 900;
    text-transform: uppercase;
    line-height: 1.1;
    margin: 0;
    padding: 0;
    border: none;
    position: relative;
    display: inline-block;
  }

  .place-name::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(90deg, #0066CC 0%, #ffeb80 100%);
  }

  .place-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: #ffeb80;
    border: 4px solid #000;
  }

  .place-rating.verified {
    background: #d4edda;
  }

  .verified-icon {
    color: #28a745;
    font-weight: 900;
    font-size: 1rem;
  }

  .stars {
    color: #0066CC;
    font-size: 1rem;
    letter-spacing: -2px;
  }

  .rating-text {
    font-weight: 900;
    font-size: 1rem;
  }

  .place-description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #333;
    margin: 0;
  }

  .place-details {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .detail-icon {
    font-size: 1rem;
  }

  .place-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.375rem 0.75rem;
    background: #000;
    color: #fff;
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tag:nth-child(2) {
    background: #0066CC;
  }

  .tag:nth-child(3) {
    background: #ffeb80;
    color: #000;
  }

  .place-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    font-size: 0.8rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 4px solid #000;
    background: #0066CC;
    color: #fff;
    box-shadow: 4px 4px 0 #000;
    transition: all 0.15s ease;
    text-decoration: none;
  }

  .cta-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000;
    background: #004a99;
  }

  .cta-button.secondary {
    background: #fff;
    color: #000;
  }

  .cta-button.secondary:hover {
    background: #ffeb80;
  }

  /* Submit Card */
  .submit-card {
    position: relative;
    margin-top: 3rem;
    padding: 3rem;
    background: #fff;
    border: 8px solid #000;
    box-shadow: 8px 8px 0 #000;
    overflow: hidden;
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 2rem;
    align-items: center;
  }

  @media (max-width: 768px) {
    .submit-card {
      grid-template-columns: 1fr;
      padding: 2rem;
      text-align: center;
    }
  }

  .submit-decoration {
    position: relative;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .submit-decoration {
      margin: 0 auto;
    }
  }

  .deco-plus {
    font-size: 6rem;
    font-weight: 900;
    line-height: 1;
    color: #0066CC;
    position: absolute;
  }

  .deco-plus.secondary {
    color: #ffeb80;
    transform: translate(8px, 8px);
    z-index: -1;
  }

  .submit-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .submit-header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  @media (max-width: 768px) {
    .submit-header {
      align-items: center;
    }
  }

  .submit-label {
    font-size: 0.7rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #0066CC;
  }

  .submit-title {
    font-size: 2rem;
    font-weight: 900;
    text-transform: uppercase;
    margin: 0;
    padding: 0;
    border: none;
    line-height: 1;
  }

  .submit-description {
    font-size: 1rem;
    line-height: 1.5;
    color: #333;
    margin: 0;
    max-width: 500px;
  }

  @media (max-width: 768px) {
    .submit-description {
      max-width: 100%;
    }
  }

  .submit-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.75rem;
    background: #0066CC;
    color: #fff;
    font-size: 0.9rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 4px solid #000;
    box-shadow: 4px 4px 0 #000;
    transition: all 0.15s ease;
    text-decoration: none;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .submit-button {
      margin: 0 auto;
    }
  }

  .submit-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000;
    background: #004a99;
  }

  .btn-icon {
    font-size: 1.25rem;
  }

  .submit-flag {
    display: flex;
    flex-direction: column;
    width: 60px;
    height: 100%;
    min-height: 120px;
    border: 4px solid #000;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .submit-flag {
      width: 100%;
      height: 20px;
      min-height: auto;
      flex-direction: row;
    }
  }

  .flag-stripe {
    flex: 1;
  }

  .flag-stripe.blue {
    background: #0066CC;
  }

  .flag-stripe.yellow {
    background: #FFD700;
  }

  /* Footer */
  .site-footer {
    border-top: 6px solid #000;
    padding: 4rem 2rem;
    background: #fff;
    color: #000;
  }

  .footer-content {
    max-width: 72rem;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    transition: opacity 0.2s ease;
    border: none;
    box-shadow: none;
  }
  
  .footer-brand:hover {
    background: transparent;
    box-shadow: none;
