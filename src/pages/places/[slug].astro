---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const places = await getCollection('places');
  return places.map((place: CollectionEntry<'places'>) => ({ 
    params: { slug: place.id }, 
    props: { place } 
  }));
}

export type Props = { place: CollectionEntry<'places'> };
const { place } = Astro.props as Props;
const { data } = place;
const { Content } = await render(place);
---

<Layout>
  <Navbar />
  <main class="place-detail">

    <!-- Hero with Image -->
    {data.image && (
      <div class="hero-container">
        <div class="hero-image">
          <img src={data.image} alt={data.name} />
        </div>
      </div>
    )}

    <!-- Main Content Grid -->
    <div class="content-grid">
      <!-- Breadcrumbs above sidebar -->
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span>‚Üí</span>
        <span class="current">{data.name}</span>
      </nav>
      <!-- Sidebar with Details -->
      <aside class="sidebar">
        <div class="details-card">
          <div class="detail-item">
            <span class="detail-icon">üìç</span>
            <div class="detail-text">
              <span class="detail-label">Address</span>
              <span class="detail-value">{data.address}</span>
            </div>
          </div>
          
          <div class="detail-item">
            <span class="detail-icon">üïê</span>
            <div class="detail-text">
              <span class="detail-label">Hours</span>
              <span class="detail-value">{data.hours}</span>
            </div>
          </div>
          
          {data.phone && (
            <div class="detail-item">
              <span class="detail-icon">üìû</span>
              <div class="detail-text">
                <span class="detail-label">Phone</span>
                <span class="detail-value">{data.phone}</span>
              </div>
            </div>
          )}
          
          {data.priceLevel && (
            <div class="detail-item">
              <span class="detail-icon">üí∞</span>
              <div class="detail-text">
                <span class="detail-label">Price</span>
                <span class="detail-value">{data.priceLevel}</span>
              </div>
            </div>
          )}
          
          {data.insurance && (
            <div class="detail-item">
              <span class="detail-icon">üí≥</span>
              <div class="detail-text">
                <span class="detail-label">Insurance</span>
                <span class="detail-value">{data.insurance}</span>
              </div>
            </div>
          )}
        </div>
        
        <!-- CTA Buttons -->
        <div class="cta-stack">
          <a href={data.ctaPrimary.url} class="cta-primary">
            {data.ctaPrimary.label}
            <span class="cta-arrow">‚Üí</span>
          </a>
          <a href={data.ctaSecondary.url} class="cta-secondary">
            {data.ctaSecondary.label}
          </a>
        </div>
        
        <!-- Tags -->
        <div class="tags-box">
          <span class="tags-title">Tags</span>
          <div class="tags-list">
            {data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </aside>
      
      <!-- Article Content -->
      <article class="main-content">
        <h1 class="page-title">{data.name}</h1>
        <div class="prose">
          <Content />
        </div>
        
        {data.mapEmbed && (
          <div class="map-embed">
            <Fragment set:html={data.mapEmbed} />
          </div>
        )}
      </article>
    </div>

    <!-- Back Navigation -->
    <nav class="back-nav">
      <a href="/">
        <span class="back-arrow">‚Üê</span>
        Back to all places
      </a>
    </nav>
  </main>
</Layout>

<style>
  .place-detail {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1rem 4rem;
  }

  /* Hero Section */
  .hero-container {
    position: relative;
    margin: 0 -1rem 3rem;
    height: 320px;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: 100%;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Breadcrumb */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 1.5rem;
    grid-column: 1 / -1;
  }

  .breadcrumb a {
    color: #000;
    border: none;
    box-shadow: none;
    opacity: 0.7;
    transition: opacity 0.15s;
  }

  .breadcrumb a:hover {
    background: none;
    opacity: 1;
  }

  .breadcrumb span {
    color: #666;
  }

  .breadcrumb .current {
    opacity: 0.6;
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Page Title */
  .page-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 900;
    line-height: 1;
    margin: 0 0 2rem;
    padding: 0;
    border: none;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: #000;
  }

  .page-title::after {
    display: none;
  }

  /* Content Grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .content-grid {
      grid-template-columns: 280px 1fr;
      gap: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 320px 1fr;
    }
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .sidebar {
      position: sticky;
      top: 2rem;
      align-self: start;
    }
  }

  /* Details Card */
  .details-card {
    background: #fff;
    border: 4px solid #000;
    box-shadow: 6px 6px 0 #000;
  }

  .detail-item {
    display: flex;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-bottom: 2px solid #eee;
  }

  .detail-item:last-child {
    border-bottom: none;
  }

  .detail-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
    width: 1.75rem;
    text-align: center;
  }

  .detail-text {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    min-width: 0;
  }

  .detail-label {
    font-size: 0.65rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #666;
  }

  .detail-value {
    font-size: 0.95rem;
    font-weight: 600;
    line-height: 1.3;
  }

  /* CTA Buttons */
  .cta-stack {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cta-primary,
  .cta-secondary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    font-size: 0.85rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
    border: 4px solid #000;
    box-shadow: 4px 4px 0 #000;
    transition: all 0.15s ease;
    text-decoration: none;
  }

  .cta-primary {
    background: #0066CC;
    color: #fff;
  }

  .cta-secondary {
    background: #fff;
    color: #000;
  }

  .cta-primary:hover,
  .cta-secondary:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000;
  }

  .cta-primary:hover {
    background: #004a99;
  }

  .cta-secondary:hover {
    background: #ffeb80;
  }

  .cta-arrow {
    font-size: 1.1rem;
  }

  /* Tags */
  .tags-box {
    padding: 1.25rem;
    background: #f8f8f8;
    border: 3px solid #000;
  }

  .tags-title {
    display: block;
    font-size: 0.65rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #666;
    margin-bottom: 0.75rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.35rem 0.7rem;
    background: #fff;
    border: 2px solid #000;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  /* Main Content */
  .main-content {
    min-width: 0;
  }

  .prose {
    font-size: 1.1rem;
    line-height: 1.75;
  }

  .prose :global(h2) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 4px solid #000;
  }

  .prose :global(h2)::after {
    display: none;
  }

  .prose :global(h3) {
    font-size: 1.2rem;
    margin-top: 1.75rem;
    margin-bottom: 0.75rem;
    border: none;
    padding: 0;
  }

  .prose :global(p) {
    margin-bottom: 1.25rem;
    color: #333;
  }

  .prose :global(ul) {
    margin: 1.25rem 0;
    padding-left: 0;
  }

  .prose :global(li) {
    margin-bottom: 0.625rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .prose :global(li)::before {
    content: '‚ñ†';
    position: absolute;
    left: 0;
    color: #0066CC;
    font-size: 0.6rem;
    top: 0.5rem;
  }

  .prose :global(strong) {
    font-weight: 700;
  }

  /* Map Embed */
  .map-embed {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 4px solid #000;
  }

  .map-embed :global(iframe) {
    width: 100%;
    height: 400px;
    border: 4px solid #000;
    box-shadow: 6px 6px 0 #000;
  }

  @media (max-width: 767px) {
    .map-embed :global(iframe) {
      height: 300px;
    }
  }

  /* Back Navigation */
  .back-nav {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 4px solid #000;
  }

  .back-nav a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #000;
    border: none;
    box-shadow: none;
    transition: gap 0.2s ease;
  }

  .back-nav a:hover {
    background: none;
    gap: 0.75rem;
  }

  .back-arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: #0066CC;
    color: #fff;
    font-size: 1rem;
    border: 3px solid #000;
    transition: transform 0.2s ease;
  }

  .back-nav a:hover .back-arrow {
    transform: translateX(-3px);
  }

  /* Mobile */
  @media (max-width: 767px) {
    .hero-container {
      height: 220px;
    }

    .page-title {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }

    .content-grid {
      gap: 2rem;
    }

    .sidebar {
      order: 2;
    }

    .main-content {
      order: 1;
    }
  }
</style>
