---
import PoweredBy from './PoweredBy.astro';
---

<nav class="neo-navbar">
  <a href={import.meta.env.BASE_URL} class="navbar-brand">
    <span class="brand-text">ukrainian</span>
    <span class="brand-text-accent">places</span>
  </a>
  <div class="navbar-logo">
    <PoweredBy layout="header" />
  </div>
</nav>

<style>
  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    border: none;
    box-shadow: none;
    transition: opacity 0.15s ease;
  }

  .navbar-brand:hover {
    background: none;
    opacity: 0.8;
  }

  .navbar-logo {
    margin-right: 10vw;
  }

  .brand-text {
    font-family: 'Bricolage Grotesque', 'Manrope', system-ui, sans-serif;
    font-size: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: transparent;
    -webkit-text-stroke: 2px #000;
    text-stroke: 2px #000;
    position: relative;
  }

  .brand-text::after {
    content: 'ukrainian';
    position: absolute;
    left: 0;
    top: 0;
    color: transparent;
    -webkit-text-stroke: 2px var(--ua-blue);
    text-stroke: 2px var(--ua-blue);
    z-index: -1;
    transform: translate(2px, 2px);
    pointer-events: none;
  }

  .brand-text-accent {
    font-family: 'Bricolage Grotesque', 'Manrope', system-ui, sans-serif;
    font-size: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: #000;
  }

  @media (max-width: 768px) {
    .brand-text,
    .brand-text-accent {
      font-size: 1.25rem;
    }

    .navbar-logo {
      margin-right: 5vw;
    }
  }

  @media (max-width: 640px) {
    .navbar-brand {
      gap: 0.35rem;
    }

    .brand-text,
    .brand-text-accent {
      font-size: 1rem;
    }

    .brand-text {
      -webkit-text-stroke: 1.5px #000;
      text-stroke: 1.5px #000;
    }

    .brand-text::after {
      -webkit-text-stroke: 1.5px var(--ua-blue);
      text-stroke: 1.5px var(--ua-blue);
      transform: translate(1px, 1px);
    }

    .navbar-logo {
      margin-right: 2vw;
    }

    .navbar-logo :global(.powered-by--header .powered-by__text) {
      display: none;
    }

    .navbar-logo :global(.powered-by--header .powered-by__logo) {
      height: 28px;
    }
  }

  @media (max-width: 380px) {
    .navbar-brand {
      gap: 0.25rem;
    }

    .brand-text,
    .brand-text-accent {
      font-size: 0.875rem;
    }

    .navbar-logo {
      margin-right: 0;
    }

    .navbar-logo :global(.powered-by--header .powered-by__logo) {
      height: 24px;
    }
  }
</style>

