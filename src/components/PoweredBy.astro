---
interface Props {
  layout?: 'header' | 'footer';
}

const { layout = 'footer' } = Astro.props;
---

<a href="https://mypaperwork.ai" target="_blank" rel="noopener noreferrer" class={`powered-by powered-by--${layout}`}>
  <span class="powered-by__text">powered by</span>
  <img src={`${import.meta.env.BASE_URL}mypaperwork.svg`} alt="mypaperwork.ai" class="powered-by__logo" />
</a>

<style>
  .powered-by {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    color: inherit;
    border: none;
    box-shadow: none;
    background: none;
    transition: opacity 0.15s ease;
  }

  .powered-by:hover {
    opacity: 0.75;
  }

  .powered-by:hover,
  .powered-by:focus,
  .powered-by:active {
    color: inherit;
    outline: none;
    border: none;
    box-shadow: none;
    background: none;
  }

  .powered-by__text {
    font-size: 1.1rem;
    font-weight: 600;
    color: #666;
    letter-spacing: 0.02em;
    white-space: nowrap;
  }

  .powered-by__logo {
    height: 40px;
    width: auto;
    flex-shrink: 0;
  }

  /* Header variant */
  .powered-by--header {
    margin-top: 1.5rem;
  }

  .powered-by--header .powered-by__text {
    font-size: 1rem;
  }

  .powered-by--header .powered-by__logo {
    height: 36px;
  }

  /* Footer variant */
  .powered-by--footer {
    border: none;
    box-shadow: none;
  }

  .powered-by--footer .powered-by__text {
    font-size: 1.4rem;
    text-transform: lowercase;
  }

  .powered-by--footer .powered-by__logo {
    height: 64px;
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .powered-by {
      gap: 0.5rem;
    }

    .powered-by__text {
      font-size: 0.9rem;
    }

    .powered-by__logo {
      height: 32px;
    }

    .powered-by--footer .powered-by__text {
      font-size: 1.1rem;
    }

    .powered-by--footer .powered-by__logo {
      height: 48px;
    }
  }
</style>

