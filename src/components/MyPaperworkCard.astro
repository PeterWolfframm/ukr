---
import type { Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const content = {
  de: {
    eyebrow: 'RWR KARTE',
    title: 'Brauchst du Hilfe mit der Rot-Weiß-Rot-Karte?',
    description: 'MyPaperwork hilft dir durch den gesamten Antragsprozess – von der Dokumentenvorbereitung bis zur erfolgreichen Einreichung.',
    cta: 'Jetzt starten'
  },
  uk: {
    eyebrow: 'RWR КАРТКА',
    title: 'Потрібна допомога з карткою Rot-Weiß-Rot?',
    description: 'MyPaperwork допоможе вам пройти весь процес подачі заявки – від підготовки документів до успішної подачі.',
    cta: 'Почати зараз'
  }
};

const t = content[locale];
---

<div class="mypaperwork-card">
  <div class="card-pattern"></div>
  
  <div class="card-content">
    <div class="logo-section">
      <div class="logo-wrapper">
        <img src="/mypaperwork.svg" alt="MyPaperwork" class="logo" />
      </div>
    </div>
    
    <div class="text-section">
      <span class="eyebrow">{t.eyebrow}</span>
      <h3 class="title">{t.title}</h3>
      <p class="description">{t.description}</p>
      
      <a href="https://mypaperwork.co" target="_blank" rel="noopener noreferrer" class="cta-button">
        <span class="cta-text">{t.cta}</span>
        <svg class="arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="square">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>
  </div>
  
  <div class="accent-bar"></div>
</div>

<style>
  .mypaperwork-card {
    position: relative;
    margin-top: 3rem;
    background: #fff;
    border: 8px solid #000;
    box-shadow: 8px 8px 0 #000;
    overflow: hidden;
  }

  .card-pattern {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 100% 0%, rgba(0, 107, 105, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 0% 100%, rgba(0, 107, 105, 0.05) 0%, transparent 40%);
    pointer-events: none;
  }

  .card-content {
    position: relative;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 3rem;
    padding: 3rem;
    align-items: center;
  }

  @media (max-width: 768px) {
    .card-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem;
      text-align: center;
    }
  }

  .logo-section {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-wrapper {
    position: relative;
    padding: 1.5rem 2rem;
    background: #fff;
    border: 4px solid #006B69;
    box-shadow: 6px 6px 0 rgba(0, 107, 105, 0.3);
  }

  .logo-wrapper::before {
    content: '';
    position: absolute;
    top: -12px;
    left: -12px;
    right: -12px;
    bottom: -12px;
    border: 4px dashed #006B69;
    opacity: 0.3;
    pointer-events: none;
  }

  .logo {
    width: 180px;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .logo-wrapper {
      display: inline-block;
    }
    
    .logo {
      width: 160px;
    }
  }

  .text-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .eyebrow {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    background: #006B69;
    color: #fff;
    font-size: 0.7rem;
    font-weight: 900;
    letter-spacing: 0.15em;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .eyebrow {
      margin: 0 auto;
    }
  }

  .title {
    font-size: 2rem;
    font-weight: 900;
    text-transform: none;
    margin: 0;
    padding: 0;
    border: none;
    line-height: 1.15;
    color: #000;
  }

  .title::after {
    display: none;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #444;
    margin: 0;
    max-width: 520px;
  }

  @media (max-width: 768px) {
    .description {
      max-width: 100%;
    }
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.75rem;
    background: #006B69;
    color: #fff;
    font-size: 0.9rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border: 4px solid #000;
    box-shadow: 4px 4px 0 #000;
    transition: all 0.15s ease;
    text-decoration: none;
    width: fit-content;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .cta-button {
      margin: 0.5rem auto 0;
    }
  }

  .cta-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000;
    background: #005654;
  }

  .cta-text {
    position: relative;
  }

  .arrow {
    transition: transform 0.2s ease;
  }

  .cta-button:hover .arrow {
    transform: translate(2px, -2px);
  }

  .accent-bar {
    height: 12px;
    background: linear-gradient(90deg, #006B69 0%, #006B69 60%, #000 60%, #000 100%);
  }
</style>

