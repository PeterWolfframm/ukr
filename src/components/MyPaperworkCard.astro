---
import type { Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const content = {
  de: {
    eyebrow: 'RWR KARTE',
    title: 'Brauchst du Hilfe mit der Rot-Weiß-Rot-Karte?',
    description: 'MyPaperwork hilft dir durch den gesamten Antragsprozess – von der Dokumentenvorbereitung bis zur erfolgreichen Einreichung.',
    cta: 'Jetzt starten'
  },
  uk: {
    eyebrow: 'RWR КАРТКА',
    title: 'Потрібна допомога з карткою Rot-Weiß-Rot?',
    description: 'MyPaperwork допоможе вам пройти весь процес подачі заявки – від підготовки документів до успішної подачі.',
    cta: 'Почати зараз'
  }
};

const t = content[locale];
---

<div class="neo-promo-card">
  <div class="card-pattern"></div>
  
  <div class="neo-promo-content">
    <div class="logo-section">
      <div class="neo-promo-logo">
        <img src={`${import.meta.env.BASE_URL}mypaperwork.svg`} alt="MyPaperwork" class="logo" />
      </div>
    </div>
    
    <div class="text-section">
      <span class="neo-promo-eyebrow">{t.eyebrow}</span>
      <h3 class="neo-promo-title">{t.title}</h3>
      <p class="neo-promo-description">{t.description}</p>
      
      <a href="https://mypaperwork.co" target="_blank" rel="noopener noreferrer" class="neo-promo-cta">
        <span>{t.cta}</span>
        <svg class="arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="square">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>
  </div>
  
  <div class="neo-promo-bar"></div>
</div>

<style>
  .logo-section {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo {
    width: 180px;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .logo {
      width: 160px;
    }

    .neo-promo-eyebrow {
      margin: 0 auto;
    }

    .neo-promo-cta {
      margin: 0.5rem auto 0;
    }
  }

  .text-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .arrow {
    transition: transform 0.2s ease;
  }

  .neo-promo-cta:hover .arrow {
    transform: translate(2px, -2px);
  }
</style>

